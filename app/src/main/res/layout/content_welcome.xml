<?xml version="1.0" encoding="utf-8"?>




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.cs554.sprint1.WelcomeActivity"
        tools:showIn="@layout/activity_welcome"
        android:background="@drawable/red_background"
        android:gravity="center"
        android:includeFontPadding="false">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViews"/>



        <RadioGroup
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/style_radio_group"
            android:paddingTop="80dp"
            >
            <RadioButton
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="Freestyle"
                android:id="@+id/Freestyle"
                android:onClick="SelectMode"
                android:checked="false"
                />
            <RadioButton
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="Standard"
                android:id="@+id/Standard"
                android:onClick="SelectMode"

                />
        </RadioGroup>


        <RadioGroup
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/player_radio_group"
            android:layout_below="@+id/style_radio_group"
            android:layout_centerVertical="true"
            android:paddingTop="120dp">
            <RadioButton
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="Local 2 Player"
                android:id="@+id/LocalTwoPlayer"
                android:onClick="SelectNumPlayers"
                android:layout_centerVertical="true"
               />



            <RadioButton
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="A I"
                android:id="@+id/AI"
                android:onClick="SelectNumPlayers"
                android:layout_alignTop="@+id/LocalTwoPlayer"
                android:layout_toRightOf="@+id/textViews"
                android:layout_toEndOf="@+id/textViews" />

        </RadioGroup>




        <RadioGroup
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/play_button"
            android:id="@+id/board_size_radio_group"
            android:orientation="horizontal"
            android:paddingBottom="80dp">


            <RadioButton
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="10 X 10"
                android:id="@+id/TenByTen"
                android:onClick="SelectSize"
                android:textSize="35sp" />

            <RadioButton
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="15 X 15"
                android:id="@+id/FifteenByFifteen"
                android:onClick="SelectSize"
                android:textSize="35sp" />

            <RadioButton
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="20 X 20"
                android:id="@+id/TwentyByTwenty"
                android:onClick="SelectSize"
                android:textSize="35sp" />
        </RadioGroup>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/play_button"
        android:background="@null"
        android:onClick="GoToPlayScreen"
        android:textColor="@android:color/white"
        android:textSize="100sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true" />


</RelativeLayout>




